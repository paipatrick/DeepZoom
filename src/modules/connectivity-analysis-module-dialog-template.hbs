<div class="wdzt-table-layout" title="Connectivity analysis result">
    <div class="wdzt-row-layout wdzt-connectivity-analysis-row">
        <div class="wdzt-cell-layout">
            <img src="{{imgDataUrl}}" alt="Analysis visualization">
        </div>
        <div class="wdzt-cell-layout wdzt-full-width">
            <div class="wdzt-connectivity-analysis-table" 
                 style="height: {{height}}px">
                <table>
                    <tr>
                        <th>Label</th>
                        <th>Color</th>
                        <th>Area</th>
                        <th>Action</th>
                    </tr>
                    {{#each components}}
                    <tr>
                        <td>{{label}}</td>
                        <td style="background-color:{{colorString}}"></td>
                        <td>{{area}}</td>
                        <td>
                            <button type="button" 
                                    data-label="{{label}}">
                                Features
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
</div>
